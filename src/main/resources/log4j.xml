<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<!-- <param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss} %5p %c{1}:%L - %m%n" /> -->
              <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %5p %c{1}:%L - %m%n"/>
		</layout>
	</appender>

	<logger name="org.springframework.beans">
        <level value="warn" />
    </logger>
    <logger name="org.springframework.binding">
        <level value="warn" />
    </logger>
    <logger name="org.springframework.jdbc">
        <level value="info" />
    </logger>
    <logger name="org.springframework.transaction">
        <level value="info" />
    </logger>
    <logger name="org.springframework.web">
        <level value="info" />
    </logger>
    <logger name="org.springframework.boot">
        <level value="info" />
    </logger>
    <logger name="org.springsource.loaded">
        <level value="info" />
    </logger>
    <logger name="com.alibaba">
        <level value="info" />
    </logger>
	<logger name="com.yhjr.demo">
		<level value="info" />
	</logger>
	<logger name="com.yhjr.demo.mapper">
		<level value="debug" />
	</logger>
	<logger name="com.yhjr.demo.service">
		<level value="debug" />
	</logger>
	
	<!-- Root Logger -->
	<root>
	    <priority value="info" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>